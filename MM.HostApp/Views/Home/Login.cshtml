@{
    <form action="/home/check" method="post" style="display: flex; flex-direction: column; width: 300px; padding: 20px; border: 1px solid #ccc; border-radius: 5px;">
        <div>
            <label for="username">Tên đăng nhập:</label><br>
            <input type="text" id="username" name="username" style="width: 100%; padding: 8px; margin-bottom: 10px; box-sizing: border-box;">
        </div>
        <div>
            <label for="password">Mật khẩu:</label><br>
            <input type="password" id="password" name="password" style="width: 100%; padding: 8px; margin-bottom: 15px; box-sizing: border-box;">
        </div>
        <button type="submit" style="background-color: #007bff; color: white; padding: 10px 15px; border: none; border-radius: 3px; cursor: pointer;">Đăng nhập</button>
    </form>
}
